{
  "$schema": "https://schema.tauri.app/config/2",

  "productName": "Save-Edit Tool xLieferant",
  "version": "0.2.5",
  "identifier": "com.xlieferant.saveedittool",

  "build": {
    "frontendDist": "../src"
  },

  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Save-Edit Tool",
        "width": 1210,
        "height": 800,
        "minWidth": 1050,
        "minHeight": 700,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'"],
        "connect-src": [
          "'self'",
          "ipc:",
          "http://ipc.localhost"
        ],
        "img-src": [
          "'self'",
          "asset:",
          "data:"
        ],
        "style-src": [
          "'self'",
          "'unsafe-inline'"
        ],
        "script-src": [
          "'self'"
        ],
        "font-src": [
          "'self'",
          "asset:"
        ]
      }
    }
  },

  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  },

  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/xLieferant/Save-Edit-Tool/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVCREQzRjhBQkNFNTE1NDEKUldSQkZlVzhpai9kVzBXM2ZhNmRpUnRqcjA1anVRWHRFRXJQeGpkbnBnNUg4VGJJTmNnd2NHQVIK",
      "windows": {
        "installMode": "basicUi"
      }
    }
  }
}
