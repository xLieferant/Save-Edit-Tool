{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ets2-tool",
  "version": "0.1.0",
  "identifier": "com.alexa.ets2-tool",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ets2-tool",
        "minWidth": 950,
        "minHeight": 650,
        "height": 750        
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
